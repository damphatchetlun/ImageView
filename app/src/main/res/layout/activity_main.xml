<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài cào"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#FDF5E6"
        ></TextView>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:backgroundTint="#008080"
        android:textSize="19dp"
        android:text="rút 3 lá bài ngẫu nhiên"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/l"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Người chơi"
                android:textColor="#FFFF00"
                android:textSize="30dp"
                android:textStyle="italic"></TextView>
            <TextView
                android:id="@+id/tiencuoc"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="1000"
                android:drawableLeft="@drawable/gold"
                android:background="@drawable/coin"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="italic"></TextView>

            ></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Mức cược"
                android:background="@drawable/cuoc"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="italic"></TextView>

           <Spinner
               android:id="@+id/spinner"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:paddingLeft="40dp"
               android:background="@drawable/spinner"></Spinner>

            ></LinearLayout>

    </LinearLayout>
5
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_View1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/image_View2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/image_View3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/b1fv" />
        >
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F08080"
        android:gravity="center"
        android:text="Kết quả"
        android:textSize="25dp"
        android:textStyle="italic"></TextView>
<!--2-->

    <TextView
        android:id="@+id/kp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:fontFamily="@font/timesbi"
        android:background="@drawable/kp"
        android:textColor="#FF4500"
        android:textSize="50dp"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/r"></ImageView>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Máy"
            android:textColor="#FFFF00"
            android:textSize="30dp"
            android:textStyle="italic"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/b1fv" />
        >
    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F08080"
        android:gravity="center"
        android:text="Kết quả"
        android:textSize="25dp"
        android:textStyle="italic"></TextView>
</LinearLayout>